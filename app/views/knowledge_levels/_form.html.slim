= form_for @knowledge_level do |f|

  .modal-body

    .form-group
      = f.label :nível
      = f.text_field :level, required: true, class:'form-control'

    .form-group
      = f.label :descrição
      = f.text_field :description, required: true, class:'form-control'

  .modal-footer

    = f.submit 'Enviar', class:'btn btn-success'