<div id="modal-holder"></div>

<div class="main-content">

  <nav class="navbar navbar-default">

    <span class="navbar-brand" title="Sistema de Alocação de Projetos"><%= yield :titulo %></span>

    <% if current_page?(projects_path) %>

      <form class="navbar-form navbar-right" style="margin-right: -3px; margin-top: 10px">

        <div class="btn-group btn-group-sm">
        
          <%= link_to 'Novo Projeto', new_project_path, data: { modal: true }, class:'btn btn-default' %>
          <%= link_to 'Alocar Membros', new_members_project_path, data: { modal: true }, class:'btn btn-default' %>
          
          <div class="btn-group btn-group-sm btn-group-merge">

            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Novo Histórico <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><%= link_to 'De Projeto', new_project_history_path, data: { modal: true }%></li>
              <li><%= link_to 'De Membro', new_project_member_history_path, data: { modal: true }%></li>
            </ul>

          </div>

        </div>

      </form>

    <ul class="nav nav-pills pull-right" style="font: 13px 'Roboto'; margin-top: 8px">
      <li class="active" style="border-radius: 0"><a href="#painel" data-toggle="tab">Painel</a></li>
      <li><a href="#lista" data-toggle="tab">Lista</a></li>
    </ul>

    <% else %>

      <p class="navbar-text pull-right">Olá, <%= current_member.email %></p>

    <% end %>

  </nav>

  <%= render 'layouts/flash' %>

  <%= yield %>
  
</div>